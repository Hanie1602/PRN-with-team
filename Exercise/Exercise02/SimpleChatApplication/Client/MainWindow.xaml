<Window x:Class="Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client"
        mc:Ignorable="d"
        Title="Chat Client" Height="400" Width="600">
    <Grid>
        <TextBox Name="ChatBox" VerticalScrollBarVisibility="Auto" IsReadOnly="True" Margin="10,10,10,50"/>
        <TextBox Name="InputBox" VerticalAlignment="Bottom" Height="30" Margin="10,10,120,10"/>
        <Button Content="Send" Width="100" Height="30" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="0,0,10,10" Click="SendButton_Click"/>
    </Grid>
</Window>
